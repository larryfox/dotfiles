[user]
  name = Larry Fox
  email = larrywfox@gmail.com

[credential]
  helper = osxkeychain

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore

[color]
  ui = auto

# insteadOf lets you do `git clone lf:dotfiles`
[url "git@github.com:larryfox/"]
  insteadOf = lf:
[url "git@github.com:"]
  insteadOf = gh:
[url "git@github.com:oakstudios/"]
  insteadOf = oak:

[alias]
  a = add
  aa = add --all
  branches = branch -a --color
  c = commit
  ammend = commit --amend
  co = checkout
  cof = checkout --
  cob = checkout -b
  df = diff
  dfc = diff --cached
  l = log --oneline
  last = show -s --oneline
  open = !gh browse
  pl = pull
  plr = pull --rebase
  pr = !gh pull-request
  ps = push
  rb = rebase
  rbc = rebase --continue
  st = status -sb
  summary = log --oneline --since=last.mon --reverse
  unstage = reset HEAD --
  # undo last commit and keep changes
  undo = reset --soft HEAD^
  zip = !git archive -o `git log -n 1 --format="git-%h"`.zip HEAD

[github]
  user = larryfox
