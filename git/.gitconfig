[user]
  name = Larry Fox
  email = larrywfox@gmail.com

[credential]
  helper = osxkeychain

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore

[color]
  ui = auto

# insteadOf lets you do `git clone lf:dotfiles`
[url "git@github.com:larryfox/"]
  insteadOf = lf:
[url "git@github.com:"]
  insteadOf = gh:
[url "git@github.com:oakstudios/"]
  insteadOf = oak:

[alias]
  a = add
  aa = add --all
  branches = branch -a --color
  ammend = commit --amend
  co = checkout
  cof = checkout --
  cob = checkout -b
  df = diff
  dfc = diff --cached
  l = log --oneline
  last = show -s --oneline
  plr = pull --rebase
  pushup = !git push --set-upstream origin `git rev-parse --abbrev-ref HEAD`
  summary = log --oneline --since=last.mon --reverse
  unstage = reset HEAD --
  # undo last commit and keep changes
  undo = reset --soft HEAD^
  zip = !git archive -o `git log -n 1 --format="git-%h"`.zip HEAD
  # abandon ship
  fuckthis = !git fetch origin && git reset --hard origin/`git symbolic-ref --short HEAD`

[github]
  user = larryfox
