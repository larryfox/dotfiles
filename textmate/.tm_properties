excludeDirectories = "{$excludeDirectories,.gem,.bundle,.sass-cache,node_modules,bower_components,log}"
excludeInFolderSearch = "{$excludeInFolderSearch,$extraExcludes,node_modules,bower_components,log}"
fileBrowserGlob  = "{*,.tm_properties,.htaccess,.*}"

TM_STRIP_WHITESPACE_ON_SAVE = true

TM_GIT           = "/usr/local/bin/git"
TM_RUBY          = "/Users/fox/.rubies/ruby-2.3.0/bin/ruby"
PATH             = "$PATH:/opt/local/bin:/usr/local/bin:/usr/texbin:$HOME/bin"

softTabs         = true
tabSize          = 2

[ .git/COMMIT_EDITMSG ]
softWrap         = true
spellChecking    = true
spellingLanguage = 'en'

[ source.julia ]
softTabs         = true
tabSize          = 4

[ source.go ]
softTabs         = false
tabSize          = 8

[ source.erlang ]
tabSize          = 4

[ source.ruby ]
softWrap         = true
tabSize          = 2

[ source.swift ]
tabSize          = 4

[ "{README,INSTALL,LICENSE,TODO}" ]
fileType         = "text.plain"

[ text ]
spellChecking    = true
softWrap         = false
wrapColumn       = 80
softTabs         = true
tabSize          = 2

[ text.haml ]
wrapColumn       = "Use Window Frame"

[ text.html ]
wrapColumn       = "Use Window Frame"

[ text.html.markdown ]
softWrap         = true
softTabs         = false
tabSize          = 4
wrapColumn       = 80

[ text.plain ]
softWrap         = true
